<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chintu.sellerhub">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".main"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddProduct"/>
        <activity android:name=".Listing_product_view"/>
        <activity android:name=".registration_module.SignUp"
            android:label="Personal Details"
            android:parentActivityName=".main"></activity>
        <activity android:name=".registration_module.PortFolio"
            android:label="Portfolio"
            android:parentActivityName=".registration_module.BankReg"></activity>
        <activity android:name=".BankEdit"
            android:label="Edit Bank Details"></activity>
        <activity android:name=".BasicEdit"></activity>
        <activity android:name=".PickupEdit"></activity>
        <activity android:name=".registration_module.BankReg"
            android:label="Bank Details"
            android:parentActivityName=".registration_module.SignUp"></activity>
        <activity android:name=".NavigationActivity"></activity>

    </application>

</manifest>