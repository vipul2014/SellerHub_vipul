<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="160dp">
    <com.android.volley.toolbox.NetworkImageView
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:id="@+id/order_image_recycler"
        android:scaleType="fitXY"
        />

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/order_image_recycler"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title of Artwork"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="20dp"
            android:id="@+id/Order_title_recycler"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Artwork Id : "
            android:id="@+id/f_artwork_id_recycler"
            android:layout_below="@+id/Order_title_recycler"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"

            android:text="0112234"
            android:id="@+id/artwork_id_recycler"
            android:layout_below="@+id/Order_title_recycler"
            android:layout_toRightOf="@+id/f_artwork_id_recycler"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/units"
            android:layout_below="@+id/f_artwork_id_recycler"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:id="@+id/artwork_units_recycler"
                android:text="1 "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/artwork_funits_recycler"
                android:textSize="15dp"
                android:text=" Unit(s)"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/units"
            android:id="@+id/PayementMode">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Mode : "
                android:id="@+id/F_payment_mode"
                android:textSize="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/payment_mode"
                android:textSize="15dp"
                android:text="COD"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/PayementMode"
            android:id="@+id/Price"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/artwork_fprice_recycler"
                android:textSize="20dp"

                android:text=" â‚¹ "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/order_price_recycler"
                android:textSize="20dp"

                android:text="22200"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Price"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/FOrder_date_recycler"
                android:textSize="15dp"

                android:text=" Order Date :  "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Order_date_recycler"
                android:textSize="15dp"

                android:text="Mar 20,11:00 am"/>
        </LinearLayout>
        </RelativeLayout>


</RelativeLayout>