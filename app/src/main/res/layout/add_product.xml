<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e7e5e5"
    >
    <include layout="@layout/toolbar"/>
    <ScrollView
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="15dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                >

                <AutoCompleteTextView
                    android:id="@+id/act_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Title"
                    android:maxLines="1"
                    android:singleLine="true"
                    />

            </android.support.design.widget.TextInputLayout>
            <Spinner
                android:id="@+id/s_category"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/category_arrays">
            </Spinner>
            <Spinner
                android:id="@+id/s_style"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/style_arrays">
            </Spinner>
            <LinearLayout
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="340dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/big_pic"
                    android:layout_width="match_parent"
                    android:layout_height="250dp">
                <ImageView
                    android:id="@+id/big_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/logo"

                    />
                    <Button
                        android:id="@+id/btn_getpic"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/edit_pic"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/big_pic"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"

                    >
                    <ImageView
                        android:id="@+id/img1"
                        android:layout_marginTop="5dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/logo"/>

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/logo"/>
                    <ImageView
                        android:id="@+id/img3"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/logo"/>
                    <ImageView
                        android:id="@+id/img4"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/logo"/>
                    <ImageView
                        android:id="@+id/img5"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/logo"/>
                </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                >
                <AutoCompleteTextView
                    android:id="@+id/act_surface"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Surface(Medium)"
                    android:maxLines="1"
                    android:singleLine="true"
                    />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                >

                <AutoCompleteTextView
                    android:id="@+id/act_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Size (LxB)(LxBxH for Handicraft/Sculpture)"
                    android:maxLines="1"
                    android:singleLine="true"
                    />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                >

                <AutoCompleteTextView
                    android:id="@+id/act_createdon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Created On"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:inputType="date"
                    android:layout_centerHorizontal="true"/>
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Packing"/>
            <RadioGroup
                android:id="@+id/rg_packing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="In Box"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rolled Unless Not Possible"/>
            </RadioGroup>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                >

                <AutoCompleteTextView
                    android:id="@+id/act_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Description"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:maxLines="5"
                    android:scrollbars="vertical"
                    android:layout_centerHorizontal="true"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                >
                <AutoCompleteTextView
                    android:id="@+id/act_sellingprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Selling Price"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:inputType="number"
                    android:layout_centerHorizontal="true"/>
            </android.support.design.widget.TextInputLayout>
            <Button
                android:id="@+id/btn_save"
                android:layout_marginTop="80dp"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:padding="2dp"
                android:background="@color/light_orange"
                android:text="SAVE"
                android:textColor="#fff"
                android:textSize="20sp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>